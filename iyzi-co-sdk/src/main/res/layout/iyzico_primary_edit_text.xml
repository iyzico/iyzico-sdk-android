<?xml version="1.0" encoding="utf-8"?>
<com.android.iyzicosdk.ui.components.IyziCoCustomBorder xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iyzico_primary_edittext_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:iyzico_borderText="@string/iyzico_input_card_number"
    app:iyzico_border_size="small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <com.android.iyzicosdk.ui.components.edit_text.IyziCoCustomEditText
            android:id="@+id/iyzico_primary_edit_text"
            style="@style/IyzicoCustomSingleLineEditText"
            android:layout_weight="11"
            android:layout_width="0dp"
            android:width="0dp"
            android:focusable="true"
            tools:hint="recep.test@mail.com" />

        <ImageView
            android:id="@+id/iyziCo_secondary_lagin_change_mail"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:visibility="gone"
            android:layout_marginEnd="-13dp"
            android:layout_marginStart="-2dp"
            android:layout_gravity="end|center"
            tools:visibility="visible"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:src="@drawable/iyzico_ic_change_mail" />
    </LinearLayout>
</com.android.iyzicosdk.ui.components.IyziCoCustomBorder>