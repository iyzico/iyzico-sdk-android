<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/iyzico_light_grey"
    android:layout_height="wrap_content">

    <com.android.iyzicosdk.ui.components.IyziCoCustomTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8sp"
        android:ellipsize="end"
        app:fontFamily="@font/markpro"
        android:id="@+id/iyzico_cell_bank_item_bank_name_textView"
        android:lineHeight="24.2sp"
        android:maxLines="1"
        tools:text= "Akbank"
        android:textColor="@color/iyzico_primary_text_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iyzico_cell_bank_imageView"
        app:layout_constraintEnd_toStartOf="@+id/iyzico_cell_bank_imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iyzico_cell_bank_imageView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iyzico_cell_bank_imageView"
        android:layout_width="72dp"
        android:scaleType="fitXY"
        android:layout_height="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/iyzico_cell_bank_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/iyzico_f1_grey_color"
        app:layout_constraintTop_toBottomOf="@+id/iyzico_cell_bank_imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>