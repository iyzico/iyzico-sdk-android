<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_gravity="left|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iyzico_ic_cards" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iyzico_ic_header_logo"/>
        <com.android.iyzicosdk.ui.components.IyziCoCustomTextView
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/iyzico_common_your_balance"
            android:fontFamily="@font/markprobold"
            android:textSize="16sp"
            android:lineHeight="25sp"
            android:textColor="@color/iyzico_primary_text_color"/>

    </LinearLayout>

    <com.android.iyzicosdk.ui.components.IyziCoCustomTextView
        android:id="@+id/iyzico_wallet_sticky_wallet_price_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/markprobold"
        android:gravity="right"
        android:lineHeight="25sp"
        android:textColor="@color/iyzico_primary_text_color"
        android:textSize="16sp"
        tools:text="113,40" />

    <View
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/iyzico_gray30"
       />

</FrameLayout>