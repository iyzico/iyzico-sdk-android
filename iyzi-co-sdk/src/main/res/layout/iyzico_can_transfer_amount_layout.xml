<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/iyzico_can_transfer_amount"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <View
        android:background="@color/iyzico_f1_grey_color"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <com.android.iyzicosdk.ui.components.IyziCoDoubleBorder
        android:id="@+id/iyzico_can_transfer_amount_transfer_all_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:translationZ="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <com.android.iyzicosdk.ui.components.IyziCoCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="54dp"
                android:layout_marginTop="-2dp"
                app:fontFamily="@font/markpro"
                android:text="@string/iyzico_can_transfer_all"
                android:textColor="@color/iyzico_primary_text_color"
                android:textSize="14sp" />

            <com.android.iyzicosdk.ui.components.IyziCoCustomTextView
                android:id="@+id/iyzico_can_transfer_amount_max_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fontFamily="@font/markpro"
                android:layout_marginTop="-2dp"
                android:textStyle="bold"
                android:gravity="end|center"
                android:layout_marginEnd="16dp"
                tools:text="â‚º 22,00"
                android:textColor="@color/iyzico_primary_text_color"
                android:textSize="14sp" />

        </LinearLayout>

    </com.android.iyzicosdk.ui.components.IyziCoDoubleBorder>

    <View
        android:background="@color/iyzico_f1_grey_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

</LinearLayout>