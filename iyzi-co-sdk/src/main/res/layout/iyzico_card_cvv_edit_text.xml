<?xml version="1.0" encoding="utf-8"?>
<com.android.iyzicosdk.ui.components.IyziCoCustomBorder xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/iyzico_card_cvv_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:iyzico_borderText="@string/iyzico_input_card_cvv"
    app:iyzico_border_size="small">

    <com.android.iyzicosdk.ui.components.edit_text.IyziCoCustomEditText
        android:id="@+id/iyzico_card_cvv_edit_text"
        style="@style/IyzicoCustomSingleLineEditText"
        android:digits="1234567890"
        android:hint="@string/iyzico_input_card_cvv_example"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:longClickable="false"
        android:maxLength="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iyzico_card_cvv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="7dp"
        android:src="@drawable/iyzico_ic_informative_cvc"/>
    </LinearLayout>

</com.android.iyzicosdk.ui.components.IyziCoCustomBorder>