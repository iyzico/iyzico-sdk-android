<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@color/iyzico_light_grey"
    android:layout_gravity="top|center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/iyzico_light_grey"
        android:padding="15dp">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/iyzico_fragment_info_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="iyzico_lottie_error.json" />

        <ImageView
            android:id="@+id/iyzico_fragment_info_animation_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:src="@drawable/iyzico_ic_white_close" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
