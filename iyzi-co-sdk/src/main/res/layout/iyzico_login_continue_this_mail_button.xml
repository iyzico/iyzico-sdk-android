<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iyzico_login_continue_this_mail_button"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/iyzico_secondary_margin"
    android:layout_marginEnd="@dimen/iyzico_secondary_margin"
    android:background="@drawable/iyzico_border_darkblue_fill_corner_radius"
    app:layout_constraintBottom_toTopOf="@+id/iyzico_fragment_login_change_acount_textView"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginBottom="32dp"
    android:visibility="visible"
    app:layout_constraintVertical_bias="1">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/iyzico_login_continue_acount_mail_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/markpromedium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="9sp"
        android:text="alperensekban@basefy.com"
        android:textColor="@color/iyzico_white"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/iyzico_login_continue_this_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/iyzico_login_continue_this_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fontFamily="@font/markpro"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="9sp"
        android:text="@string/iyzico_continue_as"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>