<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="IyziCoCustomBorder">
        <attr name="iyzico_borderText" format="string" />
        <attr name="iyzico_borderHintText" format="string" />
        <attr name="iyzico_type" format="string" />
        <attr name="iyzico_border_size" format="string" />
        <attr name="iyzico_clear_padding" format="string" />
    </declare-styleable>
    <declare-styleable name="IyziCoCustomNestedScroolView">
        <attr name="iyziCo_hide" format="boolean" />

    </declare-styleable>
    <declare-styleable name="IyziCoPrimaryEditText">
        <attr name="iyzico_headText" format="string" />
        <attr name="iyzico_hintText" format="string" />
        <attr name="android:inputType" format="integer" />
        <attr name="android:digits" format="string" />
        <attr name="iyzico_border_size_from_edit_text" format="string" />
    </declare-styleable>

    <declare-styleable name="IyziCoCustomButton">
        <attr name="android:text" format="string" />
        <attr name="iyzico_sticky" format="string" />
        <attr name="iyzico_buttonType" format="enum">
            <enum name="BLUE_FILL" value="0" />
            <enum name="EMPTY" value="1" />
            <enum name="RED_FILL" value="2" />
            <enum name="EMPTY_GRAY_BORDER" value="3" />
        </attr>
        <!--"0" olur ise sticky degil "1" olur ise sticky-->

    </declare-styleable>
    <declare-styleable name="IyziCoCustomContractItem">
        <attr name="iyzico_start_text" format="string" />
        <attr name="iyzico_end_text" format="string" />

    </declare-styleable>
    <declare-styleable name="IyziCoRectangleButton">
        <attr name="android:text" format="string" />
        <attr name="iyzico_state" format="enum">
            <enum name="ACTIVE" value="0" />
            <enum name="PASSIVE" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="IyziCoImageRightText">
        <attr name="android:text" format="string" />
        <attr name="android:src" />
    </declare-styleable>

    <declare-styleable name="IyziCoExpandable">
        <attr name="android:text" format="string" />
        <attr name="iyzico_allow_expanded" format="string" />
        <attr name="android:src" />
    </declare-styleable>


    <declare-styleable name="IyzicoRemittanceView">
        <attr name="android:text" format="string" />
        <attr name="android:inputType" format="integer" />
        <attr name="android:hint" />
    </declare-styleable>


</resources>